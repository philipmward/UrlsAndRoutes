@using UrlsAndRoutes.Controllers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActionName</title>
</head>
<body>
    <div>The controller is: @ViewBag.Controller</div>
    <div>The action is: @ViewBag.Action</div>
    <div>
        @Html.ActionLink("This is an outgoing URL", "Index", "Home", null, new { id = "myAnchorID", @class = "myCSSClass" });
    </div>
    <div>
        @Html.ActionLink("This targets another controller", "Index", "Customer");
    </div>
    <div>
        This is a Legacy URL route:
        @Html.ActionLink("click me", "GetLegacyURL", "Legacy", new { legacyURL = "~articles/Windows_3.1_Overview.html" }, null);
    </div>
</body>
</html>